{
  "name": "@zyto/back-end",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "HTTP + WebSocket API for planning, runs, and audit logs.",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "engines": { "node": ">=20.0.0" },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "ioredis": "^5.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
